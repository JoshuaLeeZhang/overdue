{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./desktop/*"]
    }
  },
  "include": [
    "agent/**/*.ts",
    "desktop/**/*.{ts,tsx}",
    "integrations/**/*.ts",
    "lib/**/*.ts",
    "server/**/*.ts"
  ],
  "exclude": ["node_modules", "dist", "ui"]
}
